<!DOCTYPE html>
{%- if not lang -%}
  {%- set lang = site.locale -%}
{%- endif %}
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ lang }}" xml:lang="{{ lang }}"{% if page.dir %} dir="{{ dir }}"{% endif %}>
<head>
{% block htmlhead -%}
  {% include "partials/head.njk" %}
{%- endblock %}
</head>
<body>
{% block nav -%}
  {% include "partials/nav.njk" %}
{%- endblock %}

{% block pagetitle -%}
{% if header -%}
  {% include "partials/hero.njk" %}
{%- else -%}
<div class="container py-5">
  <h1 class="display-1">
    {% if title %}{{ title}}{% else %}{{ site.title }}{% endif %}
    {% if subtitle -%}
    <span class="subtitle d-block h-3">
      {{ subtitle }}
    </span>
    {%- endif %}
  </h1>
  {% if description %}
  <div class="lead">
    {{ description | safe }}
  </div>
  {%- endif %}
</div>
{%- endif %}
{% if page.url != "/" and site.breadcrumbs %}
  {% if not paginator %}
    {% include "partials/breadcrumbs.njk" %}
  {% endif %}
{% endif %}
{%- endblock %}

<main>
{% block pagecontent -%}
<div class="container">
  <div class="row{% if classes %} {{ classes }}{% endif %}{% if sidebar %} has-sidebar{% endif %}">
  {{ content | safe }}
  {%- if sidebar -%}
    <div class="sidebar">
    {%- include "partials/sidebar.njk" -%}
    </div>
  {%- endif -%}
  </div>
</div>
{%- endblock %}
</main>

{% block pagefooter -%}
{% include "partials/footer.njk" %}
{%- endblock %}
</body>
</html>
