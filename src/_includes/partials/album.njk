<div class="col">
  <div class="card shadow-sm mb-3 h-100">
    <img class="card-img-top" alt="Imagem do(a) {{ post.data.title }}" src="{{ post.data.header.teaser }}" />
    <div class="card-header d-flex text-body-secondary text-truncate fs-5">
      <small>
      {% if post.data.author %}
      {{ members[post.data.author].name }}
      {% else %}
      Dispon√≠vel
      {% endif %}
      </small>
    </div><!--/.card-header-->
    <div class="card-body">
      <h3 class="card-title">
        <a class="stretched-link text-decoration-none link-body-emphasis" href="{{ post.url }}" class="text-decoration-none link-body-emphasis">{{ post.data.title | safe }}</a>
      </h3>
      <small class="card-text text-body-secondary">{{ post.data.description | safe }}</small>
    </div><!--/.card-body-->
    <div class="card-footer">
      <small class="text-body-secondary">
        Cadastrado em: {{ post.data.date | dateFilter }}
      </small>
    </div><!--/.card-footer-->
  </div><!--/.card-->
</div><!--/.col-->
